/* pages/ShoppingCart/ShoppingCart.wxss */
.shopping-cart{
  margin: 0;
  padding: 0;
  background: #f7f7f7;
}
.headstatus{
  background: #ff0000;
  color: #fff;
  text-align: center;
}
.headstatus text{
  position: relative;
  top: 55rpx;
}
.emptycart{
  display: block;
  overflow: hidden;
  min-height: 500rpx;
}
.cartImg{
  margin: 0 auto;
    width: 200rpx;
    height: 200rpx;
    margin-top: 20%;
    border-radius: 50%;
    background: #e4393c;
}
.cartImg image{
  width: 150rpx;
  height: 150rpx;
  margin-top: 20rpx;
  margin-left: 20rpx;
}
.notice{
  text-align: center;
}
.recommend-title{
  position: relative;
  text-align: center;
  font-size: 24rpx;
  margin: 30rpx 0;
  color: #999;
  height: 30rpx;
  line-height: 20rpx;
}
.recommend-title_text{
  z-index: 2;
  position: relative;
  padding: 0 30rpx;
  background-color: #f7f7f7;
}
.recommend-title_text::before,
.recommend-title_text::after
{
  content: "";
  width: 8rpx;
  height: 8rpx;
  top: 55%;
  position: absolute;
  transform: rotate(45deg);
  background: #ccc;
}
.recommend-title_text::before{
  left: 0;
}
.recommend-title_text::after{
  right: 0;
}
.recommend-title::after{
  content: "";
  position: absolute;
  left: 20rpx;
  right: 20rpx;
  top: 50%;
  pointer-events: none;
  transform: scaleY(.5);
  transform-origin: 50%  0;
  background: #ccc;
  height: 3rpx;
  z-index: 1;
}
.goodsList{
  position: relative;
  overflow: hidden;
  background: #fff;
}
.list{
  display: flex;
  overflow: hidden;
  padding: 0px 3rpx 0 0;
  margin: 0;
  justify-content: space-between;
  flex-wrap: wrap;
  background: #f7f7f7;
  -webkit-box-pack: justify;
}
/* component/goodsList/goodsList.wxss */
.goods-info{
  position: relative;
  width: 50%;
  float: left;
  margin-bottom: 2rpx;
  box-sizing: border-box;
  border-radius: 20rpx;
  background: #fff;
  padding: 15rpx 15rpx 0;
}
.goods-info:nth-child(2n){
  float: right;
  margin-right: -2rpx;
}
.goods-info::after{
  content: "";
  position: absolute;
  width: 1rpx;
  height: 1rpx;
  right: 2rpx;
  bottom: 2rpx;
  opacity: .5;
  background: #999;
}
.cover{
  position: relative;
  overflow: hidden;
  padding-top: 100%;
  height: 0;
}
.cover image{
  position: absolute;
  left: 50%;
  transform: translate(-50%, -50%);
  top: 50%;
  width: 314rpx;
  height: 314rpx;
}
.rec-name{
  overflow: hidden;
  display: -webkit-box;
  text-overflow: ellipsis;
  -webkit-line-clamp: 2;
  -webkit-box-orient: vertical;
  margin: 12rpx 0 8rpx;
  font-size: 28rpx;
  line-height: 36rpx;
  color: #333;
  height: 72rpx;
}
.mod_tag{
  height: 28rpx;
  display: inline-block;
  vertical-align: middle;
  margin-top: -2rpx;
  margin-right: 10rpx;
  font-style: normal;
}
.mod_tag image{
  display: block;
  height: 28rpx;
  width: 42rpx;
  height: 28rpx;
}
.price-info{
  width: 100%;
  overflow: hidden;
  -webkit-box-flex: 1;
  flex: 1;
}
.price{
  display: inline-block;
  font-size: 35rpx;
  color: #e93b3d;
  margin-right: 6rpx;
  line-height: 20rpx;
  font-weight: bold;
}
.mod-sign{
  margin-top: -2rpx;
  color: #e4393c;
  background: #fff;
  display: inline-block;
  position: relative;
  border-radius: 4rpx;
  min-width: 32rpx;
  font-size: 20rpx;
  line-height: 30rpx;
  vertical-align: middle;
  margin-right: 10rpx;
  text-align: center;
}
.mod-sign span{
  display: inline-block;
  background: #fff;
  padding: 0 6rpx;
}
.mod-sign::after{
  content: "";
  display: block;
  position: absolute;
  top: 0;
  left: 0;
  pointer-events: none;
  border: 1rpx solid #e4393c;
  transform: scale(.51);
  transform-origin: 0 0;
  bottom: -100%;
  right: -100%;
  border-radius: 3rpx;
}
.recommend-count{
  display: flex;
  font-size: 24rpx;
  margin-bottom: 10rpx;
}
.recommendNum{
  opacity: .5;
  margin-right: 10rpx;
  margin-left: 5rpx;
}
.recommendRate{
  opacity: .5;
}
.cartIcon{
  margin-left: 23rpx;
}
.cartIcon image{
  width: 40rpx;
  height: 40rpx;
}
.address-bar-wrap{
  background: #ffffff;
  padding: 20rpx;
  border-top: 1rpx solid #e9e9e9;
  border-radius: 0 0 20rpx 20rpx;
  display: flex;
}
.address-bar{
  flex: 1;
  position: relative;
  display: inline-block;
  overflow: hidden;
  padding: 10rpx 40rpx;
  max-width: 100%;
}
.goods-update{
  display: inline-block;
  margin-top: 10rpx;
  opacity: .6;
  font-size: 30rpx;
  padding-left: 20rpx;
}
.address::after{
  content: "";
  position: absolute;
  width: 2rpx;
  height: 20rpx;
  background: #bfbfbf;
  right: 0;
  margin-top: 10rpx;
}
.section{
  position: relative;
  background: #ffffff;
  color: #000000;
  padding: 40rpx;
  margin-top: 40rpx;
  border-radius: 30rpx;
}
.icon-shop{
  width: 28rpx;
  height: 28rpx;
  margin-left: 20rpx;
  margin-right: 20rpx;
}
.title{
  display: inline-block;
}
.goods{
  display: flex;
}
.image-wrap{
  display: inline-block;
  margin-left: 50rpx;
}
.image-wrap image{
  width: 248rpx;
  height: 248rpx;
}
.goods-content{
  display: inline-block;
  position: relative;
  padding: 20rpx;
}
.name{
  display: -webkit-box;
  overflow: hidden;
  text-overflow: ellipsis;
  -webkit-line-clamp: 2;
  -webkit-box-orient: vertical;
}
.goods-detail{
  background: #e4e4e4;
  border-radius: 20rpx;
  padding: 5rpx;
  font-size: 25rpx;
  padding-left: 15rpx;
  width: fit-content;
}
.goods-price{
  display: flex;
  justify-content: space-between;
  margin-top: 30rpx;
}
.single-price{
  color: #e4393c;
}
.select{
  align-self: center;
}

