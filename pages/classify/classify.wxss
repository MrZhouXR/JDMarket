/* pages/classify/classify.wxss */
.classify{
  display: flex;
}
.left{
  position: fixed;

  height: 100%;
  overflow-y: scroll;
}
.right{
  padding-left: 90px;
  margin: 10px;
  width: 100%;
  overflow-y: scroll;
  height: 100%;
}
.right-ad{
  width: 100%;
  height: 150px;  
}
swiper{
  border-radius: 20px;
  transform: translateY(0);
  overflow: hidden; 
}
swiper-item{
  
}
image{
  height: 100%;
  width: 100%;
}
.right-classify{

  margin-top: 10px;
  border-radius: 10px;
  box-shadow: 0 0 1px #888888;
  padding-bottom: 10px;
}
.right-classify__title{
  padding: 10px 0 15px 20px;
  font-weight: 600;
}
.right-classify .desc{
  display: flex;
  align-items: center;
  justify-content: center;
  text-align: center;
  
}
.right-classify .desc .one{
  flex:1;
}
.right-classify .desc .one image{
  width: 70px;
  height: 70px;
}
.right-classify .desc .one .content{
  font-size: 13px;
}