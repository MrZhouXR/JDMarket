  font-size: 12px;
}
.inner{
  display: flex;
  align-items: center;
  width: 100%;
  height: 100%;
  padding: 0 10px;
  background: url(https://img12.360buyimg.com/img/s678x99_jfs/t1/112839/2/12981/33105/5f17e12aE602bb83e/8a736742745d79cf.png) no-repeat 0 0;
  background-size: cover;
  box-sizing: border-box;
}
.title{
  display: flex;
  flex: 1 0 auto;
  justify-content: space-between;
}
.left-title{
  padding-left: 152rpx;
  flex: 1;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
  position: relative;
}
.left-title::before{
  content: "";
  position: absolute;
  width: 57px;
  height: 12px;
  left: 0;
  top: 3px;
  background: url(https://img12.360buyimg.com/img/s113x21_jfs/t1/132167/33/1122/2973/5ed5c74bE41e02c41/5ae83d09fff874cb.png) no-repeat 50%;
  background-size: 100% 100%;
}
.left-title::after{
  content: "";
  position: absolute;
  width: 1px;
  height: 7px;
  background: #ffe678;
  left: 67px;
  top: 5px;
}
.right-title{
  border-radius: 9px;
  position: relative;
  font-size: 11px;
  line-height: 18px;
  text-align: center;
  padding: 0 10px;
  color: #262626;
  flex-shrink: 0;
  background-image: linear-gradient(-50deg, #ffe36f, #f6d44e);
  height: 18px;
}
.right-title::after{
  content:"";
  display: inline-block;
  vertical-align: middle;
  border-left: 3px solid #262626;
  border-top: 3px solid transparent;
  border-bottom: 3px solid transparent;
  margin-left: 4px;
  margin-bottom: 2px;
}